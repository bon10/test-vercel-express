{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "lib": ["ES2015"],
    //"outDir": "./dist",
    "rootDir": "api",
    "baseUrl": ".", // プロジェクトのルートディレクトリ
    "paths": {
      "@utils/*": ["api/utils/*"], // utilsディレクトリへのエイリアス
      "@/*": ["api/*"] // srcディレクトリへのエイリアス
    }
  },
  "exclude": ["node_modules"],
  "include": ["api"]
}
